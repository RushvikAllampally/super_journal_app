<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F6F3F3"
        android:elevation="5dp"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/journal_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="11dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/journal_row_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="24th"
                    android:fontFamily="@font/balsamiqsans_regular"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/journal_row_month"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="June"
                    android:fontFamily="@font/balsamiqsans_regular"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/journal_row_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Title of the day"
                    android:fontFamily="@font/balsamiqsans_regular"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/journal_row_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="subCategory"
                    android:fontFamily="@font/balsamiqsans_regular"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>