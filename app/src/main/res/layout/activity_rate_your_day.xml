<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="5dp"
        android:paddingHorizontal="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/balsamiqsans_regular"
            android:text="How Was Your Day Today !!"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

<!--        <ImageButton-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:background="@drawable/mood_emojies" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/mood_one"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/very_sad" />

            <ImageButton
                android:id="@+id/mood_two"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/sad" />

            <ImageButton
                android:id="@+id/mood_three"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/neutral" />

            <ImageButton
                android:id="@+id/mood_four"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/happy" />

            <ImageButton
                android:id="@+id/mood_five"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/very_happy" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mood_level_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/balsamiqsans_regular"
                android:text="Current Day Mood Level : "
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/mood_level_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/balsamiqsans_regular"
                android:text=""
                android:textColor="@color/app_blue"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>


        <TextView
            android:id="@+id/mood_level_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/balsamiqsans_regular"
            android:text=""
            android:textSize="14sp"
            android:gravity="center"
            android:visibility="gone"/>


<!--        <EditText-->
<!--            android:id="@+id/reason_for_mood"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_margin="10dp"-->
<!--            android:background="@drawable/rectangle"-->
<!--            android:fontFamily="@font/balsamiqsans_regular"-->
<!--            android:hint="Describe the reason for your Mood (optional)"-->
<!--            android:padding="5dp" />-->

        <Button
            android:id="@+id/save_mood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/balsamiqsans_regular"
            android:textColor="@color/black"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/btn_color"
            android:text="Save" />

    </LinearLayout>


</androidx.cardview.widget.CardView>


